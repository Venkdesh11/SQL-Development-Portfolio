CREATE DATABASE:
------------------------
create database student_database;

CREATE STUDENT TABLE :
-------------------------
create table student (
st_id number(1) primary key,                                                      
name varchar(20) not null,
skill varchar(15) not null,
join_date date,
phone_no number(10) check(length(phone_no)=10),
trainer_id number(1) not null);

INSERT THE RECORDS :
---------------------
insert into student values (&st_id,&name,&skill,&join_date,&phone_no,&trainer_ID);


     ST_ID NAME                 SKILL           JOIN_DATE   PHONE_NO TRAINER_ID
---------- -------------------- --------------- --------- ---------- ----------
         1 JAMES                JAVA            11-NOV-23 9566960085          1
