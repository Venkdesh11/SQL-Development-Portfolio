ADD THE RELATION BETWEEN THE TABLES:
-----------------------------------
alter table student
add constraint st_f
foreign key (t_id)
references trainer(t_id);


JOIN USING INNER JOIN:
-----------------------
select * from student,trainer where student.t_id=trainer.T_id;

    
