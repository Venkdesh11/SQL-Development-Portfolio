         7 MICHAEL              MANUAL TESTING  12-DEC-23 9321465879          3


CREATE TRAINER TABLE :
--------------------------
create table trainer(
    trainer_id number(2) primary key,
    name varchar(20),
    subject varchar(20),
    location varchar(20),
    hiredate date,
    phone_no number(10) check(length(phone_no)=10),
    salary number(7) 
);

INSERT THE RECORDS:
--------------------
INSERT INTO trainer values (&trainer_id,&subject,&location,&hiredate,&phone_no,&salary) ;


TRAINER_ID NAME                 SUBJECT              LOCATION             HIREDATE    PHONE_NO     SALARY
---------- -------------------- -------------------- -------------------- --------- ---------- ----------
         1 John Smith           JAVA                 Chennai              11-NOV-23 9876543210      50000
         2 Emma Brown           SQL                  Coimbatore           15-OCT-23 9123456789      55000
         3 Olivia Johnson       MANUAL TESTING       Kerala               20-SEP-23 9988776655      48000
         


ADD THE RELATION BETWEEN THE TABLES:
-----------------------------------
alter table student
add constraint st_f
foreign key (trainer_id)
references trainer(trainer_id);


JOIN USING NATURAL JOIN:
-----------------------
select * from emp natural join dept;


