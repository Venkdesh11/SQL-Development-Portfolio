CREATE TRAINER TABLE :
--------------------------
create table trainer(
    t_id number(2) primary key,
    name varchar(20),
    subject varchar(20),
    location varchar(20),
    hiredate date,
    phone_no number(10) check(length(phone_no)=10),
    salary number(7) 
);

INSERT THE RECORDS:
--------------------
INSERT INTO trainer values (&t_id,&subject,&location,&hiredate,&phone_no,&salary) ;


T_ID NAME                 SUBJECT              LOCATION             HIREDATE    PHONE_NO     SALARY
