CREATE DATABASE:
------------------------
create database employee_database;

CREATE EMPLOYEE TABLE :
-------------------------
create table emp (
id number(1) primary key,                                                      
name varchar(20) not null,
role varchar(15) not null,
salary number(6),
Manager_id number(1) not null,
hiredate date,
deptno number(2) not null);

ALTER THE TABLE :
-------------------
alter table emp
add phone_no number(10) check(length(phone_no)=10)

INSERT THE RECORDS :
---------------------
insert into emp values (&id,&name,&role,&salary,&MANAGER_ID,&hiredate,&deptno,&phone_no);
 
ID          NAME                  ROLE              SALARY   MANAGER_ID  HIREDATE      DEPTNO   PHONE_NO
