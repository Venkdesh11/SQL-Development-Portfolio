CREATE DEPARTMENT TABLE :
--------------------------
create table dept(
    deptno number(2) primary key,
    dept_name varchar(20),
    location varchar(20),
    shift varchar(5) check(shift = 'DAY' or shift = 'NIGHT')
);
INSERT THE RECORDS:
--------------------
insert into dept values (&deptno, &dept_name, &location, &shift);

    DEPTNO DEPT_NAME            LOCATION             SHIFT
---------- -------------------- -------------------- -----
        10 SOFTWARE             CHENNAI              NIGHT
        20 ANALYST              BANGALORE            DAY
        30 PROJECT MAINTAIN     KERALA               NIGHT
        40 COUNCIL BOARD        COIMBATORE

ADD THE RELATION BETWEEN THE TABLES:
-----------------------------------
alter table emp
add constraint emp_f
foreign key (deptno)
references dept(deptno);

JOIN USING NATURAL JOIN:
-----------------------
select * from emp natural join dept;


